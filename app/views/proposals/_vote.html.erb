<% if vote.explanation.present? or vote.link.present? %>
   <%= div_for vote do %>
     <p class="login">
       <%= link_to vote.user.name, vote.user %>
     <p>
     <p class="explanation">
       <%= vote.explanation %>
     </p>
     <p class="link">
       <%= link_to vote.link, vote.link %>
     </p>
   <% end %>
<% end %>
